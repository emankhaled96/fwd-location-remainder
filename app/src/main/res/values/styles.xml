<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FirebaseTheme" parent="FirebaseUI">
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="emailButton" parent="FirebaseUI.Button.AccountChooser.EmailButton">
        <item name="backgroundColor">@color/red</item>
        <item name="drawableLeftCompat">@drawable/ic_email</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="gmailButton" parent="FirebaseUI.Button.AccountChooser.GoogleButton">
        <item name="backgroundColor">@color/white</item>
        <item name="drawableLeftCompat">@drawable/ic_google</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>
